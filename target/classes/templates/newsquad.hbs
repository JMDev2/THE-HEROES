{{#partial "content"}}

    <h2 class="text-center">Create A New Squad</h2>



    <div class="myForm1">
        <div class="container-sm" style="max-width: 500px;">
            <form action="/squaddetails/new" method="post">
                <label for="squadSize">Squad Size:</label>
                <input type="number" id="squadSize" name="squadSize" required>
                <br>

                <label for="squadName">Squad Name :</label>
                <input type="text" name="squadName" id="squadName" required>
                <br>

                <label for="squadCause">Cause:</label>
                <input type="text" id="squadCause" name="squadCause" required>
                <br>
                <br>

                <button type="submit" class="btn">New Squad</button>

            </form>

        </div>
    </div>


{{/partial}}

{{> "layout.hbs"}}