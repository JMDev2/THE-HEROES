
{{#partial "content"}}
    <div class="jumbotron text-center">
        <h2 class="display-3"><u>All Squads</u></h2>
        <br>

        <div class="card">
            <div class="card-body">
            <div class="list-group">
                {{#each Squads}}
                    <div>
                        <p>{{squadSize}}</p>
                        <p>{{squadName}}</p>
                        <p>{{squadCause}}</p>
                    </div>
            </div>
        </div>
              {{/each}}
     </div>

        <p type="submit" class="text-center"><a class="btn btn-outline-primary" href="/newsquad"> Add a new Squad.</a> </p>
    </div>

{{/partial}}
{{> layout.hbs}}